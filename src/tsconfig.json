{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "dom",
      "es6"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "./node_modules/tns-core-modules/*",
        "./node_modules/*"
      ]
    },
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noLib": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "skipLibCheck": true
  },
  "files": [
    "./index.ts"
  ],
  "exclude": [
    "hooks",
    "node_modules"
  ]
}
